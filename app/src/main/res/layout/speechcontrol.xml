<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <SurfaceView
        android:id="@+id/surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/ButtonTakePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:src="@drawable/take_pic" />

    <EditText
        android:id="@+id/chat_info_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ButtonTakePic"
        android:background="#00000000"
        android:src="@drawable/picture" />

    <ImageButton
        android:id="@+id/speech_recognize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#00000000"
        android:src="@drawable/mic" />

    <ImageButton
        android:id="@+id/btnLeft"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="left"
        android:layout_marginBottom="40dp"
        android:background="#00000000"
        android:src="@drawable/btn_left" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btnLeft"
        android:background="#00000000"
        android:src="@drawable/btn_back" />


    <ImageButton
        android:id="@+id/btnStop"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@id/btnBack"
        android:layout_alignLeft="@id/btnBack"
        android:background="#00000000"
        android:src="@drawable/btn_stop" />


    <ImageButton
        android:id="@+id/btnror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUp"
        android:layout_toEndOf="@+id/btnUp"
        android:background="#00000000"
        android:src="@drawable/btn_ror" />


    <ImageButton
        android:id="@+id/btnUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ButtonTakePic"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/btnLeft"
        android:background="#00000000"
        android:src="@drawable/btn_up" />

    <ImageButton
        android:id="@+id/land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="148dp"
        android:background="#00000000"
        android:src="@drawable/land" />

    <ImageButton
        android:id="@+id/launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnForward"
        android:layout_alignParentStart="true"
        android:background="#00000000"
        android:src="@drawable/launch" />

    <ImageButton
        android:id="@+id/btnDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnror"
        android:layout_toEndOf="@+id/btnLeft"
        android:background="#00000000"
        android:src="@drawable/btn_down" />

    <ImageButton
        android:id="@+id/btnForward"
        android:layout_width="60dp"
        android:layout_height="43dp"
        android:layout_above="@+id/btnLeft"
        android:layout_toEndOf="@+id/btnLeft"
        android:background="#00000000"
        android:src="@drawable/btn_forward" />
    <ImageButton
        android:id="@+id/btnRight"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/btnLeft"
        android:layout_toRightOf="@id/btnStop"
        android:background="#00000000"
        android:src="@drawable/btn_right" />

    <ImageButton
        android:id="@+id/btnrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnLeft"
        android:layout_alignTop="@+id/btnror"
        android:layout_gravity="left"
        android:background="#00000000"
        android:src="@drawable/btn_rol" />



</RelativeLayout>